---
kind: Cluster
name: "{{ kind_nginx_ingress_cluster_name }}"
apiVersion: kind.x-k8s.io/v1alpha4
nodes:
  - role: "control-plane"
    kubeadmConfigPatches:
    - |
      kind: InitConfiguration
      nodeRegistration:
        kubeletExtraArgs:
          node-labels: "ingress-ready=true"
    extraPortMappings:
    - containerPort: 80
      hostPort: 80
      protocol: TCP
    - containerPort: 443
      hostPort: 443
      protocol: TCP

{% if kind_nginx_ingress_cluster_extra_nodes | length > 0 %}

{% for node in kind_nginx_ingress_cluster_extra_nodes %}

{% for index in range(node.amount) %}
  - role: "{{ node.role }}"
    kubeadmConfigPatches:
    - |
      kind: JoinConfiguration
      nodeRegistration:
        kubeletExtraArgs:
          system-reserved: memory={{ node.memory }},cpu={{ node.cpu }}
    {% if node.extraKubeadmPatches is defined %}
      {{ node.extraKubeadmPatches | to_nice_yaml | indent(8) }}
    {% endif %}

{% endfor %}

{% endfor %}

{% endif %}
